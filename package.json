{
  "name": "Arizen",
  "version": "1.2.1",
  "description": "Arizen is light API wallet for Horizen with localy stored and encrypted files.",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build",
    "dist-flatten": "node_modules/.bin/flatten-packages && npm run dist",
    "publish": "publish",
    "release": "npm run dist && npm run publish"
  },
  "homepage": "https://horizen.global/github/arizen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZencashOfficial/arizen.git"
  },
  "bugs": {
    "url": "https://github.com/ZencashOfficial/arizen/issues"
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/ZencashOfficial/arizen/master/updates.json"
  },
  "keywords": [
    "zen",
    "horizen",
    "equihash",
    "wallet",
    "windows",
    "mac",
    "osx",
    "linux",
    "desktop",
    "electron"
  ],
  "author": "Horizen team <arizen@horizen.global>",
  "contributors": [
    {
      "name": "@lukas",
      "email": "lukas@zensystem.io"
    },
    {
      "name": "@gsfakianakis",
      "email": "georgios@zensystem.io"
    },
    {
      "name": "@Tigger",
      "email": "kamila@zensystem.io"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "build": {
    "appId": "global.horizen.arizen",
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "backgroundColor": "#888888",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/",
      "category": "Office"
    },
    "win": {
      "target": "Squirrel",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "axios-debug-log": "^0.4.0",
    "bip32-utils": "^0.11.1",
    "bitcoinjs-lib": "^3.3.2",
    "bs58check": "2.1.2",
    "delay": "^4.0.0",
    "electron-debug": "^2.0.0",
    "electron-download": "^4.1.1",
    "electron-packager": "^12.1.1",
    "electron-simple-updater": "^1.2.4",
    "electron-tabs": "^0.9.4",
    "errors": "^0.3.0",
    "flatten-packages": "^0.1.4",
    "fs-extra": "^7.0.0",
    "immutable": "^3.8.2",
    "is-ip": "^2.0.0",
    "jspdf": "^1.4.0",
    "luxon": "^1.3.3",
    "node-json-rpc2": "^1.1.0",
    "node-ssh": "^5.1.1",
    "npm": "^6.4.1",
    "open-ssh-tunnel": "^0.3.1",
    "password-hash": "^1.2.2",
    "ping": "^0.2.2",
    "qrcode": "^1.2.2",
    "sql.js": "^0.5.0",
    "zencashjs": "^1.1.9-a"
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "ajv-keywords": "^3.2.0",
    "coveralls": "^3.0.1",
    "deepmerge": "^2.0.1",
    "devtron": "^1.4.0",
    "electron": "^2.0.8",
    "electron-builder": "20.38.3",
    "electron-builder-squirrel-windows": "20.38.3",
    "flow-bin": "^0.80.0",
    "json-file-plus": "^3.3.0",
    "yargs": "^12.0.1"
  },
  "optionalDependencies": {
    "electron-installer-debian": "^0.8.1",
    "electron-installer-dmg": "^2.0.0",
    "electron-installer-windows": "^1.0.2"
  }
}
